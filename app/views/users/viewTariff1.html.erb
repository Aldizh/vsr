<% if session[:current_user_id] %>

<div id="edit_tariff">
<%= form_tag(:action => "addNewTariff", :id => "editTariffSubmit") do %>
  <br><br>
  <table class="tariff_list">
  	  <thead>
      <th>Name </th>
  		<th>Prefix</th>
  		<th>Description</th>
  	  <th>Rate</th>
      <th>Icrement</th>
      <th>Multiply by </th>
      <th>Grace Period</th>
  	  </thead>
  	  <tbody>
     <span class="next_link"><%= link_to "Next ->", :tariff => @tariffs.first, :action => "viewTariff1"%></span>
  	  <% @tariffs.each do |t| %>
  	  	<tr>
          <td><%= text_field_tag 'name', @name, :disabled => true %></td>
          <td><%= number_field_tag 'prefix', t[:prefix], :disabled => true%></td>
  	  		<td><%= text_field_tag 'description', t[:description] %></td>
  	  		<td><%= text_field_tag 'voice_rate', t[:voice_rate] %></td>
          <td><%= text_field_tag 'rate_addition', t[:rate_addition] %></td>
          <td><%= text_field_tag 'rate_multiplier', t[:rate_multiplier] %></td>
          <td><%= text_field_tag 'grace_period', t[:grace_period] %></td>
          <td><span class="save_link"><%= link_to 'Edit', :t_id => t[:id_tariffs_key], :action => "editTariff" %> </span></td>
  	  <% end %>
  	  </tbody>
  </table>
  <%= submit_tag "Add", :class => "submit_button" %><br><br>
<% end %>
</div>

<% else %>
  <%= flash[:error] = "You must be logged in to view this page" %><br><br>
  <span class="login_link"><%= link_to "Login", "/sessions/new" %></span>
<% end %>